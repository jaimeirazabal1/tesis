extends ../layout
block content

	div.container
		h2="Nueva Solicitud"
		br
		form(class="form-horizontal")
			div.form-group
				label(class="col-sm-2 control-label")="Prioridad"
				div(class="col-sm-10")
					select(name="prioridad_id",class="form-control")
						each val in prioridad
							option(value=val.id)=val.descripcion
			div.form-group
				label(class="col-sm-2 control-label")="Descripción"
				div(class="col-sm-10")
					textarea(class="form-control",name="descripcion",placeholder="Descripción")
			div.form-group
				label(class="col-sm-2 control-label")="Fecha"
				div(class="col-sm-10")
					div(id="datetimepicker1",class="input-append date")
						input(data-format="dd/MM/yyyy hh:mm:ss",type="text",name="fecha",placeholder="Fecha",class="form-control")
						span(class="add-on")
							i(data-time-icon="icon-time",data-date-icon="icon-calendar")
			div.form-group
				div(class="col-sm-offset-2 col-sm-10")
					input(type="submit",value="Agregar",class="btn btn-success")
	script(src="/javascripts/js/bootstrap-datetimepicker.min.js")